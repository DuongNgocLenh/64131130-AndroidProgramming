<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer_Content"
        android:name="ntu.duongngoclenh.ontap_fragment_replace_dynamic.ContentFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B82C2C"
        app:layout_constraintBottom_toTopOf="@+id/fragmentContainer_Footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer_Footer"
        android:name="ntu.duongngoclenh.ontap_fragment_replace_dynamic.FooterFragment"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#582F948E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>